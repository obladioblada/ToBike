<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:gravity="center"
    android:layout_gravity="center"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="10dp"
        >

        <ImageView
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_bluetooth_searching_black_48dp"
            android:layout_gravity="center"
            android:foregroundGravity="center"
            android:layout_weight="0.2"
            android:backgroundTint="@color/colorPrimary"
            android:tint="@color/colorButtons"
            />


        <TextView
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:text="Looking For Devices"
            android:textSize="20dp"
            android:textColor="@color/colorButtons"
            android:textStyle="normal"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="0.8"
            android:foregroundGravity="center"
            />


           <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminate="true"
                android:indeterminateTint="@color/colorButtons"
                android:paddingRight="4dp"
                android:paddingLeft="4dp"
                android:id="@+id/btprogressBar"/>

    </LinearLayout>


    <View
    android:layout_width="match_parent"
    android:layout_height="4dp"
    android:background="@color/colorButtons"
    android:layout_marginTop="5dp"
    />





</LinearLayout>