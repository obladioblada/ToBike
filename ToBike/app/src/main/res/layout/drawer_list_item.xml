    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="16dp"
        android:id="@+id/icon_item"
        android:tint="#727272"
        />
<TextView
    android:id="@+id/textViewItem"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
