<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.gianpaolobasilico.tobike.SettingActivity"
    app:theme="@style/SecondaryActivityTheme"
    android:background="@color/colorPrimary">

    <android.support.v7.widget.Toolbar
        android:id="@+id/setting_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimaryDark"
        android:elevation="4dp"
        app:theme="@style/SecondaryActivityTheme"
        xmlns:android="http://schemas.android.com/apk/res/android">
    </android.support.v7.widget.Toolbar>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cerca"
        android:id="@+id/connetiti"
        android:layout_below="@+id/setting_toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp" />

<include layout="@layout/listdevices"></include>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listaDevices"
        android:layout_below="@id/connetiti"
        android:background="@color/white">
    </ListView>
</RelativeLayout>
