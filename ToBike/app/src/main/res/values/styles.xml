<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorButtons</item>
    </style>

    <style name="ToBikeTheme" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="colorAccent">@color/colorButtons</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_menu_black_18dp</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
    </style>

    <style name="SecondaryActivityTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorAccent">@color/colorButtons</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

</resources>
